{
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "rootDir": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": [
        "./**/*.d.ts",
        "./**/*.ts",
    ],
    "exclude": [
        "node_modules",
        ".vscode"
    ]
}